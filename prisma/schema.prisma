generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String    // Hashed password
  name      String?
  roadmaps  Roadmap[] // Kullanıcının haritaları
  createdAt DateTime  @default(now())
}

model Roadmap {
  id        String   @id @default(uuid())
  title     String
  goal      String
  isPinned  Boolean  @default(false)
  status    String   @default("planning") // "planning" | "completed"
  messages  String?  // JSON string of chat history
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nodes     Node[]

  // İLİŞKİ: Her harita bir kullanıcıya aittir
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Node {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String   @default("pending")
  progress    Int      @default(0)
  
  // Hierarchy
  parentId    String?
  parent      Node?    @relation("NodeToChildren", fields: [parentId], references: [id])
  children    Node[]   @relation("NodeToChildren")

  roadmapId   String
  roadmap     Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)

  // Rich Content (stored as JSON string)
  widgets     String? 
}
